[alias]
	aa = add --all
	ci = commit
	co = checkout
	cr = cherry-pick
	sb = status -sb

	undo = reset --soft HEAD~
	prune = fetch --prune

	filelog = log -u
	logtree = log --graph --oneline --decorate --all

	# list the file in the previous commit
	fipc = diff-tree --no-commit-id --name-only -r HEAD

[merge]
	ff = only

[color]
	branch = auto
	diff = auto
	status = auto
	ui = true

[commit]
	# gpgsign = true

[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes

[github]
	user = mlcdf

# correct typos
[help]
	autocorrect = 1

[push]
	default = simple
	followTags = true

[status]
	showUntrackedFiles = all

# rewrites of repo paths
[url "git@github.com:"]
	pushInsteadOf = https://github.com/
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
	insteadOf = "github:"

