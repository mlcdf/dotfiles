[alias]
  undo = reset --soft HEAD~

[color]
  branch = auto
  diff = auto
  status = auto
  ui = true

[commit]
	gpgsign = true

[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes

[github]
	user = mlcdf

# correct typos
[help]
  autocorrect = 1

[push]
	default = simple

# rewrites of repo paths
[url "git@github.com:"]
	pushInsteadOf = https://github.com/
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
	insteadOf = "github:"

